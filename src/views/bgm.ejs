<!DOCTYPE html>
<html lang="ko">
<body>

  <audio id="bgm" loop>
    <source src="/music/bgm.mp3" type="audio/mpeg">
  </audio>

  <script>
    const bgm = document.getElementById("bgm");
    bgm.volume = 0.3;

    window.addEventListener("message", (e) => {
      if (e.data === "PLAY_BGM") {
        bgm.play().catch(() => {});
      }
    });
  </script>

</body>
</html>